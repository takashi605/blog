{
  "cucumber.features": ["frontend/e2e/**/*.feature"],
  "cucumber.glue": ["frontend/e2e/**/*.ts"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit", // 保存時に型の import を追加する
    "source.fixAll.eslint": "explicit" //  保存時に ESLint によるフォーマットを行う
  },
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifier": "relative",
  "eslint.useESLintClass": true,
  "rust-analyzer.linkedProjects": [
    "source/backend/api/Cargo.toml",
    "source/backend/api-test/Cargo.toml"
  ],
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true,
    "editor.inlayHints.enabled": "off"
  },
  "makefile.configureOnOpen": false,
  "cSpell.words": ["Usecase"]
}
